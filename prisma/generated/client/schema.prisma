generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String           @id @default(cuid())
  name              String?          @unique
  email             String           @unique
  emailVerified     DateTime?
  image             String?
  password          String
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  totalQuestions    Int              @default(0)
  totalRightAnswers Int              @default(0)
  accuracy          Int              @default(0)
  quizzesPlayed     Int              @default(0)
  sessions          Session[]
  quizResults       UserQuizResult[]
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Quiz {
  id            Int        @id @default(autoincrement())
  level         String?
  category      Json?
  plays         Int        @default(0)
  questionCount Int        @default(0)
  createdAt     DateTime   @default(now())
  title         Json
  questions     Question[]
}

model Question {
  id             Int  @id @default(autoincrement())
  quizId         Int
  topic          Json
  question_text  Json
  options        Json
  correct_answer Json
  quiz           Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model UserQuizResult {
  id          Int          @id @default(autoincrement())
  userId      String
  quizId      Int
  score       Int
  createdAt   DateTime     @default(now())
  userAnswers UserAnswer[]
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserAnswer {
  id               Int            @id @default(autoincrement())
  userQuizResultId Int
  questionId       Int
  givenAnswer      String
  isCorrect        Boolean
  userQuizResult   UserQuizResult @relation(fields: [userQuizResultId], references: [id], onDelete: Cascade)
}

model Lobby {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String?
  createdAt DateTime @default(now())
  quizId    Int
}
